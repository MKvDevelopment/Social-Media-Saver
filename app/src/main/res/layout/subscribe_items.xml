<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_7sdp"
    android:id="@+id/layout"
    android:layout_margin="@dimen/_4sdp"

    >

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/subscription_img"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"

        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:buttonTint="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/subscription_img"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/subscription_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Home"
            android:textAllCaps="true"

            android:textColor="@color/green_50"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/subscription_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_below="@id/subscription_status"

            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subscription_title"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/subscription_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"

            android:layout_below="@id/subscription_title"
            />
            <TextView
                android:id="@+id/subscription_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25% off"
                android:textColor="@color/green_50"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_12sdp"

                android:layout_below="@id/subscription_title"
                />

        </LinearLayout>




    </RelativeLayout>
</RelativeLayout>